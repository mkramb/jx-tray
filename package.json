{
  "name": "jx-tray",
  "version": "1.0.0",
  "main": "build/main.js",
  "author": "Mitja Kramberger",
  "license": "MIT",
  "build": {
    "asar": true,
    "publish": null,
    "appId": "io.jenkins-x.tray",
    "directories": {
      "output": "package"
    },
    "files": [
      "build/**/*"
    ]
  },
  "scripts": {
    "precommit": "pretty-quick --staged",
    "start": "concurrently -k \"npm run start-renderer\" \"npm run start-main\"",
    "start-renderer": "webpack-dev-server --config webpack/config.renderer.js --port 9000 --hot --inline",
    "start-main": "concurrently -k \"webpack --config webpack/config.main.js --watch\" \"wait-on http://localhost:9000 && electron .\"",
    "build": "rimraf build && cross-env NODE_ENV=production parallel-webpack --config webpack/config.app.js",
    "package": "rimraf package && electron-builder",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "lint": "tslint --project . --rules-dir . src/**/*.ts*",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "styled-components": "^3.3.3",
    "styled-normalize": "^8.0.0",
    "styled-reset": "^1.3.5"
  },
  "devDependencies": {
    "@types/node": "10.5.2",
    "@types/react": "16.4.6",
    "@types/react-dom": "16.0.6",
    "concurrently": "3.6.0",
    "copy-webpack-plugin": "^4.5.2",
    "cross-env": "^5.1.3",
    "css-loader": "^1.0.0",
    "electron": "^2.0.4",
    "electron-builder": "^20.19.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "parallel-webpack": "^2.3.0",
    "prettier": "^1.13.7",
    "pretty-quick": "^1.4.1",
    "rimraf": "^2.6.2",
    "strip-ansi": "^4.0.0",
    "style-loader": "^0.21.0",
    "ts-loader": "^4.4.1",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.7.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.7.2",
    "url-loader": "^1.0.1",
    "wait-on": "^2.1.0",
    "webpack": "^4.15.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.3"
  }
}
